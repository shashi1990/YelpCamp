<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <H2>Welcome to YelpCamp</H2>
            <p>Find Best campgrounds in one place</p>
            <p>
                 <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
            </div>
    </header>
    
    
   <div class="row" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
        
          <div class="col-md-3 col-sm-6s">
              <div class="thumbnail">
                <!--<h4><%= campground.name %></h4>-->
                <img src="<%= campground.image %>" >
              </div>
              <div class="caption">
                  <h4><%= campground.name %></h4>
              </div>
              <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary btn-md">More Info.</a>
          </div>  
        
        <% }); %>
    </div>
    
</div>
<% include ../partials/footer %>