<% include ../partials/header%> 
<div class="container">
    <div class="row">
        <h2 style="text-align:right; margin:20px 50px">Edit a Comment: <%=campground.name%> </h2>
        <div class="container">
            <div style="width:40%; float:right ; margin:20px;">
                
                
                <form action="/campgrounds/<%=campground._id%>/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                    </div>
                    <!--<div class="form-group">-->
                    <!--     <input class="form-control" type="text" name="comment[author]" placeholder="name">-->
                    <!--</div>-->
                     
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back to Campgrounds</a>
            </div>
        </div>
    </div>
</div>
